%h1= link_to 'drankt', root_path
- if signed_in?
  %p
    = link_to "#{current_user.email}", user_path(current_user.id)
    \/
    = link_to 'Sign out', sign_out_path, method: :delete
- else
  = link_to 'Sign in', sign_in_path
#flash
  - flash.each do |key, value|
    %div{:class => "flash #{key}"}= value

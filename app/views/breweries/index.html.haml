%h1 Listing breweries

%table
  %thead
    %tr
      %th Name
      %th Country
      %th
      %th
      %th

  %tbody
    - @breweries.each do |brewery|
      %tr
        %td= brewery.name
        %td= brewery.country
        %td= link_to 'Show', brewery
        %td= link_to 'Edit', edit_brewery_path(brewery)
        %td= link_to 'Destroy', brewery, :method => :delete, :data => { :confirm => 'Are you sure?' }


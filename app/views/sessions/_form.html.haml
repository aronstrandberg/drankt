= form_for :session, url: session_path do |form|
  .text-field
    = form.label :email
    = form.text_field :email, type: 'email'
  .password-field
    = form.label :password
    = form.password_field :password
  .submit-field
    = form.submit
.other-links
  - if Clearance.configuration.allow_sign_up?
    = button_to "No account? Sign up", sign_up_path, method: :get
  = button_to "Forgot password?", new_password_path, method: :get

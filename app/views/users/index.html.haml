%h1 Listing users

%table
  %thead
    %tr
      %th Email
      %th First name
      %th Last name
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.first_name
        %td= user.last_name
        %td= button_to 'Show', user, method: :get
        %td= button_to 'Edit', edit_user_path(user), method: :get
        %td= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

= button_to 'New user', new_user_path, method: :get
